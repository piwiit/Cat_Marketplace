        </div>
      </div>
    </div>
    <!--End custom content-->
    <!--Start section medium for product event-->
    <div class="section-medium bk-gray">
      <div class="container">
        <!--Product event-->
        <div class="product-event">
          <div class="row">
            <div class="col-md-6">
              <!--Thumnbail-->
              <div class="event-thumbail">
                <%if @promotion.picture.attached?%>
                        <%= image_tag @promotion.picture, alt: 'picture' %>
                      <%else%>
                        <%=image_tag "https://images.pexels.com/photos/1134166/pexels-photo-1134166.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940", class: "d-inline-block align-center"%>
                      <%end%>
              </div>
            </div>
            <div class="col-md-6">
              <!--Product content-->
              <ul class="product-event-content">
                <li>
                  <div id="defaultCountdown" class="tzCountdown is-countdown"><span class="countdown-row countdown-show3"><span class="countdown-section"><span class="countdown-amount" id="days">0</span><span class="countdown-period">Jours</span></span><span class="countdown-section"><span class="countdown-amount" id="hours">0</span><span class="countdown-period">Heures</span></span><span class="countdown-section"><span class="countdown-amount" id="minutes">0</span><span class="countdown-period">Minutes</span></span><span class="countdown-section"><span class="countdown-amount" id="seconds">0</span><span class="countdown-period">Secondes</span></span></span></div>
                </li>
                <li>
                  <%= link_to artwork_path(@promotion.id) do %><h3><%=@promotion.title%></h3><%end%>
                  <p class="tz-color" style="text-decoration: line-through"><%=@promotion.price*2%> €</p><span class="event-price" style="color : #ec971f"><%=@promotion.price%>€</span>
                </li>
                <li class="product-event-attr">
                  <span class="tz-color">
                    Format:
                    <i class="">PNG</i>
                  </span>
                </li>
                <li class="event-footer">
                  <%= link_to 'Ajouter au panier',join_art_carts_path(artwork_id: @promotion.id), method: 'POST',class:"add-to-cart"%>
                </li>
              </div>
            </div>
            <!--End product event-->
          </div>
        </div>
        <!--End section medium for product event-->
        <!--Start section large top for tabs content-->
        <div class="section-large-top">
          <div class="container">
            <!--Tabs Shop-->
            <div class="tz-shortcode-tabs">
              <!--Tabs Header-->
              <div class="tz-tabs-header">
                <h2 class="tz-tabs-title pull-left">Dernières créations</h2>
              </div>
              <!--End tab header-->
              <!--Tab content-->
              <div class="tab-content">
                <!--Tab item-->
                <div class="tab-pane active" id="one_read">
