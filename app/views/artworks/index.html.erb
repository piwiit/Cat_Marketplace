<!--Start shop-->
<div class="tz-shop">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <!--Start for shop sidebar-->
        <div class="tz-shop-sidebar">
          <aside class="widget widget_product_categories">
            <h3 class="widget-title">Categories</h3>
            <ul class="product-categories">
              <% @categories.each do |category| %>
                <li>
                  <%=link_to category.name, category_path(category.id)%>
                </li>
              <% end %>
            </ul>
          </aside>
          <aside class="widget widget_product">
            <h3 class="widget-title">Artworks au hasard</h3>
            <ul>
              <% @artworks.sample(5).each do |artwork| %>
                <li>
                  <a href="/artworks/<%=artwork.id%>">
                    <%if artwork.picture.attached?%>
                      <%= image_tag artwork.picture, style: "height: 52; width: 78;", alt: 'picture' %>
                    <%else%>
                      <img src="https://i.picsum.photos/id/1025/4951/3301.jpg?hmac=_aGh5AtoOChip_iaMo8ZvvytfEojcgqbCH7dzaz-H8Y" class="d-inline-block align-center" alt="">
                    <%end%>
                    <div class="item-info">
                      <h5><%= artwork.title %></h5>
                      <span class="price"><%= artwork.price %> €</span>
                    </div>
                  </a>
                </li>
              <% end %>
              <br>
            </ul>
          </aside>
        </div>
        <!--End shop sidebar-->
      </div>
      <div class="col-md-9">
        <!--Start shop content-->
        <div class="tz-shop-content">
          <ul class="tz-breadcrumbs">
            <li>
              <%= link_to "Accueil", root_path%>
            </li>
            <li class="current">
              Artworks
            </li>
          </ul>
          <div class="shop-banner">
            <%= image_tag "https://avassor.fr/wp-content/uploads/2018/01/header_pkmn01.png", alt: 'banner' %>
          </div>
          <div class="tz-product row grid-eff">
            <!--Product item-->
            <% @artworks.each do |artwork|%>
              <div class="product-item col-md-4 col-sm-6">
                <div class="item">
                  <div class="product-item-inner">
                    <div class="product-thumb">
                      <%if artwork.picture.attached?%>
                        <%= image_tag artwork.picture, alt: 'picture' %>
                      <%else%>
                        <%=image_tag "https://upload.wikimedia.org/wikipedia/commons/1/10/MaisonCarr%C3%A9e.jpeg", class: "d-inline-block align-center"%>
                      <%end%>
                    </div>
                    <div class="product-info">
                      <br>
                      <h4><a href="shop.html"><%= artwork.title %></a></h4>
                      <span class="p-meta">
                        <span class="p-price"><%= artwork.price %> €</span>
                      </span>
                      <span class="p-color">
                      </span>
                      <p>
                        <%= artwork.description %>
                      </p>
                      <span class="p-mask">
                        <%= link_to 'Ajouter au panier',join_art_carts_path(artwork_id: artwork.id), method: 'POST',class:"add-to-cart"%>
                        <span class="quick-view">
                          <%= link_to 'Voir', artwork_path(artwork.id) %>
                        </span>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            <!--End product item-->
          </div>
          <nav class="pagination">
            <ul class="pagination_list pull-right">
              <%= form_tag artworks_path, :method => 'get',:id => "artworks_search", remote: true do %>
                <div id="artworks"><%= render 'artworks' %></div>
              <% end %>
            </ul>
          </nav>
        </div>
        <!--End shop content-->
      </div>
    </div>
  </div>
</div>
<!--End Shop-->
